<?xml version="1.0" encoding="utf-8"?>
	<!-- list中每一栏的布局 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:paddingLeft="10dip"
	android:paddingRight="10dip" android:paddingTop="1dip"
	android:paddingBottom="1dip">
	<ImageView android:id="@+id/diaryimage" android:layout_width="70px"
		android:layout_height="70px" android:singleLine="true" />
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_marginLeft="10px"
		android:orientation="vertical">
		<LinearLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:orientation="horizontal">
			<TextView android:layout_width="60dip"
				android:layout_height="30dip" android:text="标题：" android:textSize="8pt"
				android:textColor="#ffffffff" />
			<TextView android:id="@+id/diarytitle" android:layout_width="180dip"
				android:layout_height="30dip" android:gravity="left"
				android:textSize="10pt" android:textColor="#ffffffff" />
		</LinearLayout>

		<LinearLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:orientation="horizontal">
			<TextView android:layout_width="60dip"
				android:layout_height="30dip" android:text="日期：" android:textSize="8pt"
				android:textColor="#ffffffff" />
			<TextView android:id="@+id/diarydate" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:textSize="10pt"
				android:textColor="#ffffffff" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
